<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fcf791"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/frameLayout"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="13dp">


            <ImageView
                android:id="@+id/list_ranking_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/list_ranking_rank"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/list_ranking_img"
                android:layout_centerVertical="true"
                android:textSize="30dp"
                android:fontFamily="cursive"
                android:text="1." />

        </RelativeLayout>


    </FrameLayout>

    <View
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/list_ranking_point"
        android:layout_centerVertical="true"
        android:background="#fff04a" />

    <TextView
        android:id="@+id/list_ranking_point"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp"
        android:gravity="center"
        android:text="10000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/list_ranking_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/frameLayout"
        android:layout_toStartOf="@+id/list_ranking_point"
        android:gravity="center"
        android:text="Player2018"
        android:textColor="#000000"
        android:textSize="20dp" />


</RelativeLayout>